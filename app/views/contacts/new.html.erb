<h1 class="page_title">Say Hello</h1>

<h3>M'envoyer un message</h3>


<%= form_for @contact do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, required: true %><br>

  <%= f.label :email %><br>
  <%= f.email_field :email, required: true %><br>

  <%= f.label :message %><br>
  <%= f.text_area :message, as: :text %><br>

  <div class="hidden">
    <%= f.label :nickname %><br>
  <%= f.text_field :nickname, hint: 'Leave this field blank' %><br>
  </div>

  <%= f.submit 'Send Message', class: "button" %>

<% end %>


